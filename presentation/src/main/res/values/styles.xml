<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="AppTextStyle.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTextStyle.Small">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/radio_states</item>
        <item name="android:stateListAnimator">@animator/radiobar_selector</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTextStyle.Dark">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
