<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGold"
    android:orientation="vertical">

    <Button
        android:id="@+id/quizFailedRetryButton"
        style="@style/AppTextStyle.SimpleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizFailedIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/try_again_button" />

    <ImageView
        android:id="@+id/quizFailedIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_sad_face" />
</RelativeLayout>